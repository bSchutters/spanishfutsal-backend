{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "lib": ["ES2020"],
    "jsx": "react-jsx",
    "strict": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "rootDir": "."
    // Commented out to avoid module resolution conflicts with Strapi v5
    // "baseUrl": ".",
    // "paths": {
    //   "@strapi/*": ["node_modules/@strapi/*"]
    // }
  },
  "include": [
    // Include all ts files
    "./**/*.ts",
    // Include all js files
    "./**/*.js",
    // Force the JSON files in the src folder to be included
    "src/**/*.json",
    "types"
  ],

  "exclude": [
    "node_modules/",
    "dist/",
    ".cache/",
    ".tmp/",
    "build/",
    "**/*.test.*",
    // Do not include admin files in the server compilation
    "src/admin/",
    // Do not include plugins in the server compilation
    "src/plugins/**"
  ]
}
