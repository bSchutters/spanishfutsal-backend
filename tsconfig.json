{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "lib": ["ES2020"],
    "jsx": "react-jsx",
    "strict": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@strapi/*": ["node_modules/@strapi/*"]
    }
  },
  "include": ["./**/*.ts", "./**/*.json"],
  "exclude": [
    "node_modules/",
    "dist/",
    ".cache/",
    ".tmp/",
    "build/",
    "**/*.test.*"
  ]
}
